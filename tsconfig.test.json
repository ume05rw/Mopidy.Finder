{
    // 基底の定義
    "extends": "./tsconfig.base.json",

    "compilerOptions": {

        // ソースマップファイルを出力するか否か
        "sourceMap": true,

        // コメントを削除するか否か
        "removeComments": false,

        // モジュール単位の出力形式指定: commonjs, amd, system, umd, es2015
        "module": "commonjs"
    },

    // tsconfig.json がプロジェクトルートに無いとき、パスを教える。
    "include": [
        "./src/ts/**/*",
        "./tests/**/*"
    ]
}
